<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define your beans here -->

    <bean id="DrawBean2D" class="com.app.Draw2D"> </bean>
    <bean id="DrawBean3D" class="com.app.Draw3D"> </bean>


    <bean id="circle" class="com.app.Circle">
        <constructor-arg ref="DrawBean2D"/>
    </bean>

    <bean id="square" class="com.app.Square">
        <property name="Draw2D" ref="DrawBean2D"/>
    </bean>

</beans>



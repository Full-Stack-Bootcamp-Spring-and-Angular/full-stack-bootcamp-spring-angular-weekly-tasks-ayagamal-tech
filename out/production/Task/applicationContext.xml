<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define your beans here -->

    <bean id="DrawBean2D" class="com.app.Draw2D"> </bean>
    <bean id="DrawBean3D" class="com.app.Draw3D"> </bean>


    <bean id="circle" class="com.app.Circle"> <!-- Default Circle Singleton Scope -->
        <constructor-arg ref="DrawBean2D"/>
    </bean>

    <bean id="square2D" class="com.app.Square" scope="prototype"> <!-- Square prototype Scope -->
        <property name="draw2D" ref="DrawBean2D"/>
    </bean>

    <bean id="square3D" class="com.app.Square" scope="prototype"> <!-- Square prototype Scope -->
        <property name="draw3D" ref="DrawBean3D"/>
    </bean>

</beans>